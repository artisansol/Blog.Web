@using Syncfusion.Blazor.Cards

<SfCard style="width:50%">
    <CardHeader Title=@Title SubTitle=@SubTitle />

    <CardContent EnableSeparator=true>
        <content>@Content</content>
    </CardContent>

    <CardFooter>
        <CardFooterContent>
            @Footer
        </CardFooterContent>
    </CardFooter>
</SfCard>
