@using Blog.Web.Views.Bases

<DialogBase @ref=Dialog
            ButtonTitle="Post"
            Title="NEW POST"
            OnClick=@(async () => await PostViewAsync())>
    <Content>
        <TextAreaBase @ref=TextArea
                      Height="250px"
        @bind-Value=@PostView.Content />

        <SpinnerBase @ref=Spinner />
    </Content>
</DialogBase>