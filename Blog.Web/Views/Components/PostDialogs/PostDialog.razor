@using Blog.Web.Views.Bases

<DialogBase @ref=Dialog
            ButtonTitle="Post"
            Title="NEW POST"
            OnClick=@(async () => await PostViewAsync())>
    <Content>
        <TextAreaBase @ref=TextArea
                      Height="250px"
        @bind-Value=@PostView.Content />
        <ValidationSummaryBase @ref=ContentValidationSummary
                               Key=@nameof(PostView.Content)
                               ValidationData=@Exception?.Data 
                               Color="Red"/>

        <SpinnerBase @ref=Spinner />
    </Content>
</DialogBase>