@using Blog.Web.Views.Bases
@using Models.Views.Components.Timelines

@if (State == TimelineComponentState.Content)
{
    <Virtualize Items=@PostViews Context=postView>
        <CardBase Title=@postView.Title
                  SubTitle=@postView.SubTitle>
            <Content>@postView.Content</Content>
        </CardBase>
    </Virtualize>
}

